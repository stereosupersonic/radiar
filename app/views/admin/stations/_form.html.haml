= form_for [:admin, @station] do |f|
  - if @station.errors.any?
    #error_explanation
      %h2= "#{pluralize(@station.errors.count, "error")}"
      %ul
        - @station.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name
    = f.text_field :name, class: "form-control"
  .form-group
    = f.label :playlist_url
    = f.text_field :playlist_url, class: "form-control"
  .form-group
    = f.label :url
    = f.text_field :url, class: "form-control"
  .form-group
    = f.label :strategy
    = f.select :strategy, [:radibox], class: "form-control"
  .form-check
    = f.check_box :enabled, class: "form-check-input"
    = f.label :enabled, class: "form-check-label"
 
  .actions
    = submit_button
