%h1 Stations Overview

.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Type
        %th Active
        %th Last update
        %th 
  
    %tbody
      - @stations.each do |station|
        %tr
          %td= station.name
          %td= station.strategy
          %td= station.enabled?
          %td= "#{time_ago_in_words(station.last_logged_at)} (#{format_datetime station.last_logged_at})" if station.last_logged_at
          %td= link_to :edit, edit_admin_station_path(station)

  
= add_button new_admin_station_path
